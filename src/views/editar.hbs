<!-- Container -->
		<div class="container mx-auto mb-20">
			<div class="flex justify-center px-0 my-0">
				<!-- Row -->
				<div class="w-full xl:w-[90%] lg:w-11/12 flex">
					<!-- Col -->
					<div data-aos="zoom-in-right"
						class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
						style="background-image: url('https://i.ibb.co/THvndq3/22448133-3d-3-Ecer-Background-10.jpg')"
					></div>
					<!-- Col -->
					<div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none" data-aos="zoom-in-left">
						<h3 class="pt-4 text-2xl text-center text-sky-600 font-bold uppercase">Actualizar Asignaturas</h3>
						<form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" action="/update/{{asignaturas._id}}" method="POST">
							<div class="mb-4 md:flex md:justify-between">
								<div class="mb-4 md:mr-2 md:mb-0">
									<label class="block mb-2 text-sm font-bold text-gray-700" for="nombre">
										Nombre
									</label>
									<input
										class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
										id="nombre"
										type="text"
                                        name="nombre"
										placeholder="Matematicas"
                                        value="{{asignaturas.nombre}}"
										required
										autocomplete="off"
									/>
								</div>
								<div class="md:ml-2">
									<label class="block mb-2 text-sm font-bold text-gray-700" for="creditos">
										Creditos
									</label>
									<input
										class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
										type="number"
                                        name="creditos" 
                                        id="creditos"
										placeholder="40"
                                        value="{{asignaturas.creditos}}"
										required
										autocomplete="off"
									/>
								</div>
                                <div class="md:ml-2">
									<label class="block mb-2 text-sm font-bold text-gray-700" for="horas">
										Horas
									</label>
									<input
										class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
										id="horas"
										type="number"
                                        name="horas"
										placeholder="2"
                                        value="{{asignaturas.horas}}"
										required
										autocomplete="off"
									/>
								</div>
							</div>

							<div class="mb-6 text-center">
								<button
									class="w-full px-4 py-2 font-bold text-white bg-sky-600 rounded-full hover:bg-sky-700 focus:outline-none focus:shadow-outline"
									type="submit"
								>
									Actualizar
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>


